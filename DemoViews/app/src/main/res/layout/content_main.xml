<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Demonstração das Android Views!"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:padding="5dp"/>

    <Button
        android:id="@+id/btnTextViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text View Demo"/>

    <Button
        android:id="@+id/btnEditTextDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Text Demo"/>

    <Button
        android:id="@+id/imgViemDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minha Imagem"/>

    <Button
        android:id="@+id/btnCompleteDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Complete Demo"/>

    <Button
        android:id="@+id/btnImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagem Button"/>

    <Button
        android:id="@+id/btnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Check Box"/>

    <Button
        android:id="@+id/btnProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialog"/>
     </LinearLayout>
